<%- include('partials/header.ejs') %>


<form id="inputField" action="/addtask" method="POST">
    <input type="text" name="newTask" required placeholder="Neues ToDo hinzufügen" id="a"  class="form-control " aria-label="Recipient's username" aria-describedby="button-addon2">
    <input type="submit" value="Hinzufügen" class="btn btn-outline-secondary" id="button-addon2" method="POST">
</form>




<h2 class="display-4">List of ToDos</h2>
<form action="/removetask" method="POST" class="taskList">
    <ul class="list-group list">
        <% for( var i = 0; i < task.length; i++){ %>
            <li class="list-group-item">
                <input type="hidden" name="" value="<%= task[i] %>" /> <%= task[i] %> 
                <button name="taskId" value="<%=task[i]%>" class="btn btn-outline-secondary rmBtn" id="button-addon2">
                    erledigt
                </button>
            </li>
        <% } %>
    </ul>
</form>
    
 

